{
  "name": "traduora-api",
  "version": "0.0.0",
  "license": "AGPL-3.0-only",
  "scripts": {
    "fmt": "prettier --write \"src/**/*.ts\"",
    "start": "cross-env TR_MAIL_DEBUG=true TR_CORS_ENABLED=true nodemon",
    "build": "tsc && copyfiles src/templates/**/* ../dist",
    "clean": "rimraf ../dist/src ../dist/test",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test TR_ACCESS_LOGS_ENABLED=false jest --watch",
    "test:e2e": "cross-env NODE_ENV=e2e TR_DEFAULT_PROJECT_PLAN=default TR_ACCESS_LOGS_ENABLED=false TR_DB_DATABASE=tr_e2e jest --config ./test/jest-e2e.json --runInBand --verbose",
    "typeorm": "ts-node node_modules/.bin/typeorm"
  },
  "dependencies": {
    "@nest-middlewares/morgan": "^5.1.1",
    "@nestjs/common": "^5.1.0",
    "@nestjs/core": "^5.1.0",
    "@nestjs/jwt": "^0.1.3",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^5.2.2",
    "@types/handlebars": "^4.1.0",
    "@types/nodemailer": "^4.6.5",
    "bcrypt": "^3.0.0",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.9.1",
    "csv": "^5.1.1",
    "ejs": "^2.6.1",
    "generate-password": "^1.4.1",
    "gettext-parser": "^3.1.0",
    "handlebars": "^4.1.0",
    "iconv-lite": "^0.4.24",
    "js-yaml": "^3.12.0",
    "moment": "^2.22.2",
    "mysql": "^2.16.0",
    "node-native2ascii": "^0.2.0",
    "nodemailer": "^5.1.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "properties": "^1.2.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "strings-file": "^0.0.5",
    "swagger-ui-express": "^4.0.2",
    "typeorm": "^0.2.7",
    "typescript": "^3.0.1",
    "xliff": "^4.1.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/bcrypt": "^2.0.0",
    "@types/express": "^4.16.0",
    "@types/iconv-lite": "^0.0.1",
    "@types/jest": "^23.3.1",
    "@types/js-yaml": "^3.11.2",
    "@types/moment": "^2.13.0",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}

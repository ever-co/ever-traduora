    "@types/morgan": "^1.9.2",
    "@types/node": "^15.0.2",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "jest": "^27.1.1",
    "nodemon": "^2.0.7",
